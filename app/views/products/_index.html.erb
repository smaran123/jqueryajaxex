

<div class="row edit">
<div class="col-md-6 col-md-offset-3">

  <h3>products</h3>
  <div style="float:right;">
<%= link_to "New product", new_product_path, :remote => true %>
</div>
  <table class="table table-bordered table-striped">
    <tr>
      <th>product No</th>
      <th>Name</th>
      <th>description</th>
      <th>category</th>
     
       <td>&nbsp;</td>
    </tr>
    <% @products.each do |product| %>
    <div id="product-<%= product.id %>"> 
      <tr>
        <td><%= product.id %></td>
        <td><%=  product.name %></td>
        <td><%=  product.description %></td>
        <td>
        <%=  product.category %>
             </td>
                
                <td>
        <%= link_to "Edit", edit_product_path(product), class: "btn btn-primary", :remote => true %>
        <%= link_to "Show", product_path(product), class: "btn btn-primary", :remote => true %>
       
        <%= link_to "Destroy", product_path(product), :method => :delete, :remote => true,class: "btn btn-danger" %>
        </td>
      </tr>
      </div>
    <% end %>
  </table>
</div>
</div>



