


<div class="row edit">
<div class="col-md-6 col-md-offset-3">

  <center><h3>Students</h3></center>
  <div style="float:right;">
<%= link_to "New Student", new_student_path, :remote => true %>
</div>
  <table class="table table-bordered table-striped">
    <tr>
      <th>SNo</th>
      <th>FirstName</th>
      <th>LastName</th>
      <th>Email</th>
      <th>Phone</th>
       <td>&nbsp;</td>
    </tr>
    <% @students.each do |student| %>
    <div id="student-<%= student.id %>"> 
      <tr>
        <td><%= student.id %></td>
        <td><%=  student.first_name %></td>
        <td><%=  student.last_name %></td>
        <td>
        <%=  student.email %>
             </td>
        <td>
     
               <%=  student.phone %>
            
        </td>
        
                <td>
        <%= link_to "Edit", edit_student_path(student), class: "btn btn-warning", :remote => true %>
        <%= link_to "Show", student_path(student), class: "btn btn-success", :remote => true %>
        <%= link_to "ajax link", home_index_path, class: "btn btn-primary", :remote => true %>
        <%= link_to "Destroy", student_path(student), :method => :delete,:data => {:confirm => "are you sure?"}, :remote => true,class: "btn btn-danger" %>
        </td>
      </tr>
      </div>
    <% end %>
  </table>
</div>
</div>

